    <style name="NoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:actionBarStyle">@style/AcordeiActionBar</item>
        <item name="android:actionBarTabTextStyle">@style/AcordeiActionBar</item>
        <item name="android:actionMenuTextColor">@color/green_dark</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/AcordeiActionBar</item>
        <item name="actionBarTabTextStyle">@style/AcordeiActionBar</item>
