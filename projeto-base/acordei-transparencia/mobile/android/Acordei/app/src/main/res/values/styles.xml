        <item name="actionBarTabTextStyle">@style/AcordeiActionBar</item>
        <item name="actionMenuTextColor">@color/green_dark</item>

        <item name="colorPrimaryDark">@color/green_light</item>
        <item name="colorPrimary">@color/green_light</item>
    </style>

    <style name="AppTheme.Widget" />



    <style name="AcordeiActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/action_bar_background</item>

    <!-- Support library compatibility -->
        <item name="background">@color/action_bar_background</item>
    </style>
